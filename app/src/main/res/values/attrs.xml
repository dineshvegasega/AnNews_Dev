<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>




    <declare-styleable name="CardSliderViewPager">

        <attr name="cardSlider_pageMargin" format="dimension" />
        <attr name="cardSlider_otherPagesWidth" format="dimension" />

        <attr name="cardSlider_smallScaleFactor" format="float" />
        <attr name="cardSlider_smallAlphaFactor" format="float" />

        <attr name="cardSlider_minShadow" format="dimension" />
        <attr name="cardSlider_baseShadow" format="dimension" />

        <attr name="cardSlider_indicator" format="reference" />

        <attr name="auto_slide_time" format="integer" />

    </declare-styleable>

    <declare-styleable name="CardSliderIndicator">

        <attr name="defaultIndicator" format="reference" />
        <attr name="selectedIndicator" format="reference" />
        <attr name="indicatorMargin" format="dimension" />
        <attr name="indicatorsToShow" format="integer" />
    </declare-styleable>

    <declare-styleable name="ViewPager2">
        <attr name="android:orientation" />
    </declare-styleable>


    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_pageMargin" format="dimension|reference" />
        <attr name="rvp_adjacentVisibleSize" format="dimension|reference" />
    </declare-styleable>
</resources>
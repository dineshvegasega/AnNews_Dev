<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/m1"
                android:scaleType="centerCrop"
                android:layout_weight="0.6"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_weight="0.3"
                >


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/barrier"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_bold"
                            android:lines="2"
                            android:text="Elon Musk confirms Elon Musk confirms"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_20"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/_E8EBF4"
                        >
                    </View>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        >


                        <com.github.vipulasri.timelineview.TimelineView
                            android:id="@+id/timeline1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:markerSize="@dimen/_8sdp"
                            app:lineWidth="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:startLineColor="@color/_C4C4C4"
                            app:marker="@drawable/ellipse_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:endLineColor="@color/_C4C4C4"
                            app:lineStyle="dash"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/timeline1"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_regular"
                            android:lines="2"
                            android:text="Elon Musk confirms SpaceX is sticking to 2022 launch date goal for Mars"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_12"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        >
                        <com.github.vipulasri.timelineview.TimelineView
                            android:id="@+id/timeline2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:markerSize="@dimen/_8sdp"
                            app:lineWidth="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:startLineColor="@color/_C4C4C4"
                            app:marker="@drawable/ellipse_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:endLineColor="@color/_C4C4C4"
                            app:lineStyle="dash"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/timeline2"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_regular"
                            android:lines="2"
                            android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_12"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        >
                        <com.github.vipulasri.timelineview.TimelineView
                            android:id="@+id/timeline3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:markerSize="@dimen/_8sdp"
                            app:lineWidth="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:startLineColor="@color/_C4C4C4"
                            app:marker="@drawable/ellipse_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:endLineColor="@color/_C4C4C4"
                            app:lineStyle="dash"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/timeline3"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_regular"
                            android:lines="2"
                            android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_12"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        >
                        <com.github.vipulasri.timelineview.TimelineView
                            android:id="@+id/timeline4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:markerSize="@dimen/_8sdp"
                            app:lineWidth="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:startLineColor="@color/_C4C4C4"
                            app:marker="@drawable/ellipse_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:endLineColor="@color/_C4C4C4"
                            app:lineStyle="dash"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/timeline4"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_regular"
                            android:lines="2"
                            android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_12"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"

                        >
                        <com.github.vipulasri.timelineview.TimelineView
                            android:id="@+id/timeline5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:markerSize="@dimen/_8sdp"
                            app:lineWidth="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:startLineColor="@color/_C4C4C4"
                            app:marker="@drawable/ellipse_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:endLineColor="@color/_C4C4C4"
                            app:lineStyle="dash"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/_133248"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/timeline5"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/product_sans_regular"
                            android:lines="2"
                            android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                            android:autoSizeTextType="uniform"
                            android:autoSizePresetSizes="@array/autosize_4_5_12"
                            android:autoSizeStepGranularity="@dimen/_1sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/baseButtonsPlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"
                    >


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/_F1F3F9"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivCross"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintDimensionRatio="H,1:1.1"
                            app:srcCompat="@drawable/x"
                            android:background="@color/_F1F3F9"
                            android:scaleType="centerInside"
                            android:layout_weight="1"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlayback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintDimensionRatio="H,1:1.1"
                            app:srcCompat="@drawable/skip_back"
                            android:background="@color/_F1F3F9"
                            android:scaleType="centerInside"
                            android:layout_weight="1"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlayPause"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintDimensionRatio="H,1:1.1"
                            app:srcCompat="@drawable/play"
                            android:background="@color/_F1F3F9"
                            android:scaleType="centerInside"
                            android:layout_weight="1"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlaynext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintDimensionRatio="H,1:1.1"
                            app:srcCompat="@drawable/skip_forward"
                            android:background="@color/_F1F3F9"
                            android:scaleType="centerInside"
                            android:layout_weight="1"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textPlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/_A1ADB6"
                            android:gravity="center"
                            app:fontFamily="@font/product_sans_regular"
                            android:text="H"
                            android:textSize="@dimen/_20sdp"
                            android:layout_weight="1"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/baseButtonsPlay"
                    android:progressTint="@color/_ED2525"
                    android:thumbTint="@color/_ED2525"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="@dimen/_minus8sdp"
                    android:visibility="gone"
                    />



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/baseShare"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/_F1F3F9"
                    android:visibility="gone"
                    >
                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/_E8EBF4"
                        >
                    </View>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view4"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view4"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/_718491"
                                android:gravity="center"
                                android:src="@drawable/arrowleft"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textTopic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/_718491"
                                android:gravity="center"
                                tools:ignore="MissingConstraints"
                                app:fontFamily="@font/product_sans_regular"
                                android:text="Topics"
                                android:textSize="@dimen/_12sdp"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/baseShareCenter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:background="@drawable/all_radius"
                            android:layout_margin="10dp"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivBookmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintDimensionRatio="H,1:1.1"
                                app:srcCompat="@drawable/bookmark"
                                android:background="@color/_F1F3F9"
                                android:scaleType="centerInside"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/ivShare"
                                android:backgroundTint="@color/white"
                                />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintDimensionRatio="H,1:1.1"
                                app:srcCompat="@drawable/share"
                                android:background="@color/_F1F3F9"
                                android:scaleType="centerInside"
                                android:layout_weight="1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/ivBookmark"
                                android:backgroundTint="@color/white"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view4"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textArticle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/_718491"
                                android:gravity="center"
                                tools:ignore="MissingConstraints"
                                app:fontFamily="@font/product_sans_regular"
                                android:text="Article"
                                android:textSize="@dimen/_12sdp"
                                />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/_718491"
                                android:gravity="center"
                                android:src="@drawable/arrowright"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="top"
                    app:constraint_referenced_ids="baseButtonsPlay,baseShare"
                    android:visibility="visible"/>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="top"
                    app:constraint_referenced_ids="baseButtonsPlay,seekbar"
                    android:visibility="visible"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</LinearLayout>
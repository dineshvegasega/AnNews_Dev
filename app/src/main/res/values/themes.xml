<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.vegasega.AmNews" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/_ffffff</item>
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/app_color</item>
        <item name="colorOnSecondary">@color/_000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="mukeshOtpStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/white_round_corner</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/_999999</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="RoundCorner5">
        <item name="cornerSize">5%</item>
    </style>


    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
    </style>

    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonBlue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:colorPrimary">@color/_0748A9</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/vector_back</item>

    </style>



    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>



    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
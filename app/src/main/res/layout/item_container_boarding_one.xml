<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/layoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="0dp"
    app:cardUseCompatPadding="true"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/m1"
                android:scaleType="centerCrop"
                android:layout_weight="0.6"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTitle0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/_133248"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/product_sans_bold"
                    android:lines="2"
                    android:text="Elon Musk confirms Elon Musk confirms"
                    android:autoSizeTextType="uniform"
                    android:autoSizePresetSizes="@array/autosize_4_5_20"
                    android:autoSizeStepGranularity="@dimen/_1sdp"
                    android:layout_weight="1"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <com.github.vipulasri.timelineview.TimelineView
                        android:id="@+id/timeline1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:markerSize="@dimen/_8sdp"
                        app:lineWidth="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:startLineColor="@color/_C4C4C4"
                        app:marker="@drawable/ellipse_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:endLineColor="@color/_C4C4C4"
                        app:lineStyle="dash"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textTitle1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/_133248"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        tools:ignore="MissingConstraints"
                        app:fontFamily="@font/product_sans_regular"
                        android:lines="2"
                        android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                        android:autoSizeTextType="uniform"
                        android:autoSizePresetSizes="@array/autosize_4_5_12"
                        android:autoSizeStepGranularity="@dimen/_1sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <com.github.vipulasri.timelineview.TimelineView
                        android:id="@+id/timeline2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:markerSize="@dimen/_8sdp"
                        app:lineWidth="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:startLineColor="@color/_C4C4C4"
                        app:marker="@drawable/ellipse_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:endLineColor="@color/_C4C4C4"
                        app:lineStyle="dash"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textTitle2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/_133248"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        tools:ignore="MissingConstraints"
                        app:fontFamily="@font/product_sans_regular"
                        android:lines="2"
                        android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                        android:autoSizeTextType="uniform"
                        android:autoSizePresetSizes="@array/autosize_4_5_12"
                        android:autoSizeStepGranularity="@dimen/_1sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        />

                </LinearLayout>





            </LinearLayout>





        </LinearLayout>



</androidx.cardview.widget.CardView>
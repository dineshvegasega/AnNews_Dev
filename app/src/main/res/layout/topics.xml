<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F1F3F9">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitle0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_133248"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        app:fontFamily="@font/product_sans_bold"
        android:text="Please tell us what are\nthe topics you are\ninterested in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout2"
        android:textSize="@dimen/_20sdp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_140sdp"
        android:background="@drawable/top_radius"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/_4E6576"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_bold"
                android:text="Select atleast one topic"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/_E70932"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_bold"
                android:text="Select All"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="1"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear1"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            android:orientation="vertical"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/item_topics"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="10"
                app:spanCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbars="vertical"
                android:saveEnabled="true"
                android:scrollbarSize="@dimen/_3sdp"
                android:scrollbarThumbVertical="@color/_E79D46"
                android:fadeScrollbars="false"
                android:clipToPadding="false"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/_10sdp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icon_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_10sdp"

                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/editTextContinue"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                style="@style/PrimaryButtonBlue"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:hint="@string/Continue"
                android:inputType="number"
                android:text="@string/Continue"
                app:layout_constraintStart_toEndOf="@+id/imgBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:focusable="false"
                android:cursorVisible="false"
                android:gravity="center"
                android:backgroundTint="@color/_0748A9"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
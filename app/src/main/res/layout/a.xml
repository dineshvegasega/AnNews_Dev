<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/m1"
            android:scaleType="centerCrop"
            android:layout_weight="0.6"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="0.3"
            >



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textHeader1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="start"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/view1"
                app:fontFamily="@font/product_sans_bold"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_35"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                app:autoSizeMaxTextSize="@dimen/_100sdp"
                app:autoSizeMinTextSize="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/_C4C4C4"
                app:layout_constraintTop_toBottomOf="@+id/textHeader1"
                app:layout_constraintBottom_toTopOf="@+id/textTitle1"
                >
            </View>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textTitle2"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_regular"
                android:lines="2"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_10"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/textTitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textTitle3"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:lines="2"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_10"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/textTitle2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textTitle4"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:lines="2"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_10"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/textTitle3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textTitle5"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:lines="2"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_10"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/textTitle4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/baseButtons"
                tools:ignore="MissingConstraints"
                app:fontFamily="@font/product_sans_regular"
                android:layout_marginTop="@dimen/_8sdp"
                android:lines="2"
                android:text="Elon Musk confirms  SpaceX is sticking to 2022 launch date goal for Mars"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_4_5_10"
                android:autoSizeStepGranularity="@dimen/_1sdp"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/baseButtons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/_C4C4C4"
                    android:layout_marginTop="@dimen/_5sdp"
                    >
                </View>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        tools:ignore="MissingConstraints"
                        app:fontFamily="@font/product_sans_regular"
                        android:text="@string/something_went_wrong"
                        android:autoSizeTextType="uniform"
                        android:autoSizePresetSizes="@array/autosize_4_5_10"
                        android:autoSizeStepGranularity="@dimen/_1sdp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        tools:ignore="MissingConstraints"
                        app:fontFamily="@font/product_sans_regular"
                        android:text="@string/something_went_wrong"
                        android:autoSizeTextType="uniform"
                        android:autoSizePresetSizes="@array/autosize_4_5_10"
                        android:autoSizeStepGranularity="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivUp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintDimensionRatio="H,1:1.1"
                    app:layout_constraintEnd_toStartOf="@+id/ivAudio"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/up"
                    android:background="@color/white"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="@dimen/_15sdp"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAudio"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintDimensionRatio="H,1:1.1"
                    app:layout_constraintEnd_toStartOf="@+id/ivSearch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/speker"
                    android:background="@color/white"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="@dimen/_15sdp"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintDimensionRatio="H,1:1.1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/search"
                    android:background="@color/white"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="@dimen/_15sdp"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>